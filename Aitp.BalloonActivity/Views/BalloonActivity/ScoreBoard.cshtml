@model System.Collections.Generic.ICollection<Aitp.BalloonActivity.Models.BalloonTeam>

    <h1>Score Board</h1>
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Team</th>
                <th>Balloons</th>
                <th>Height</th>
                <th>Score</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var t in Model.OrderBy(m => m.BalloonCount/(m.Height == 0 ? 1 : m.Height)).ThenBy(m => m.Name))
            {
                <tr>
                    <td>@t.Name</td>
                    <td>@t.BalloonCount</td>
                    <td>@t.Height</td>
                    <td>@(t.BalloonCount / (t.Height == 0 ? 1 : t.Height))</td>
                    <td><a asp-controller="BalloonActivity" asp-action="Delete" asp-route-Team="@t.Name">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>